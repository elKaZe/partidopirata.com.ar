---
pageable: true
per_page: 20
layout: blog
---
<h1>Artículos etiquetados '<%= tagname %>'</h1>

<% if paginate && num_pages > 1 %>
  <p>Página <%= page_number %> de <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Página anterior', prev_page, class: 'button' %></p>
  <% end %>
<% end %>

<ul>
  <% page_articles.each_with_index do |article, i| %>
    <div class="row half no-collapse">
      <div class="4u">
        <a href="<%= article.url %>" class="image"><img src="<%= article.data['thumb'] %>" alt="<%= article.title %>" /></a>
      </div>
      <div class="8u">
        <h4><%= link_to article.title, article %></h4>
        <%= Sanitize::clean article.summary(250) %>
      </div>
    </div>
  <% end %>
</ul>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Siguiente página', next_page, class: 'button' %></p>
  <% end %>
<% end %>
